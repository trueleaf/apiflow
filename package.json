{
  "name": "apiflow",
  "private": true,
  "scripts": {
    "bootstrap": "npm --prefix packages/web ci && npm --prefix packages/server ci",
    "i": "npm run bootstrap",
    "web:dev": "npm --prefix packages/web run dev",
    "web:web": "npm --prefix packages/web run web",
    "web:share": "npm --prefix packages/web run share",
    "web:build": "npm --prefix packages/web run build:web",
    "web:build:share": "npm --prefix packages/web run build:share",
    "web:build:web": "npm --prefix packages/web run build:web",
    "web:build:font": "npm --prefix packages/web run build:font",
    "web:preview": "npm --prefix packages/web run preview",
    "web:type-check": "npm --prefix packages/web run type-check",
    "server:dev": "npm --prefix packages/server run dev",
    "server:start": "npm --prefix packages/server run start",
    "server:test": "npm --prefix packages/server run test",
    "server:cov": "npm --prefix packages/server run cov",
    "server:lint": "npm --prefix packages/server run lint",
    "server:lint:fix": "npm --prefix packages/server run lint:fix",
    "server:ci": "npm --prefix packages/server run ci",
    "server:build": "npm --prefix packages/server run build",
    "dev": "npm-run-all --parallel web:dev server:dev",
    "dev:web": "npm --prefix packages/web run dev",
    "web:build:ci": "npm --prefix packages/web run build:ci",
    "web:build:ci:pack": "npm --prefix packages/web run build:ci:pack",
    "web:build:ci:win": "npm --prefix packages/web run build:ci:win",
    "web:build:ci:mac": "npm --prefix packages/web run build:ci:mac",
    "web:build:ci:linux": "npm --prefix packages/web run build:ci:linux",
    "web:build:local:pack": "npm --prefix packages/web run build:local:pack",
    "web:build:local:win": "npm --prefix packages/web run build:local:win",
    "web:build:local:mac": "npm --prefix packages/web run build:local:mac",
    "web:build:local:linux": "npm --prefix packages/web run build:local:linux",
    "docker:publish": "node scripts/publish-docker.js"
  },
  "devDependencies": {
    "@types/koa-bodyparser": "^4.3.12",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
